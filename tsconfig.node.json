{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["./*", "src/main/**/*", "src/preload/**/*","src/common/**/*"],
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "emitDecoratorMetadata":true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@common/*": ["src/common/*"]
    }
  }
}
